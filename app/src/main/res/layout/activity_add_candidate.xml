<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_candidate_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Candidate Name"
            android:inputType="textPersonName" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_candidate_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Candidate Surname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_candidate_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_candidate_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_candidate_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birth Date (YYYY-MM-DD)"
            android:inputType="date" />

        <EditText
            android:id="@+id/et_candidate_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expected Salary"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_candidate_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <CheckBox
            android:id="@+id/cb_candidate_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as Favorite" />

        <Button
            android:id="@+id/btn_save_candidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>
</ScrollView>
